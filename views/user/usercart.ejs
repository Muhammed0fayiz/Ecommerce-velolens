<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Your+Chosen+Font&display=swap">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/headstyle.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    /* Your existing styles */
    .table {
      border-collapse: collapse;
      width: 100%;
      margin-top: 20px;
    }

    .table th,
    .table td {
      border: none;
      padding: 8px;
      text-align: left;
    }

    .table th {
      background-color: #f8f9fa;
    }

    /* Adjusted styles for custom-thead */
    .custom-thead th {
      background-color: #2ad257;
      color: #ffffff;
    }

    /* Additional styling for the Order Summary */
    .order-summary {
      background-color: #f8f9fa;
      padding: 15px;
      border-radius: 5px;
      margin-top: 20px;
    }

    .order-summary h4 {
      color: #007bff;
    }

    .order-summary p {
      margin: 5px 0;
    }

    .order-summary hr {
      margin-top: 10px;
      margin-bottom: 10px;
      border: 0;
      border-top: 1px solid #dee2e6;
    }

    .order-summary strong {
      color: #007bff;
    }

    .quantity-btn {
      padding: 5px 10px;
      font-size: 14px;
      background-color: #23f0ff;
      /* Green */
      border: none;
      color: white;
      border-radius: 5px;
      cursor: pointer;
    }

    .quantity-btn:hover {
      background-color: #18d841;
      /* Darker Green */
    }
  </style>
</head>

<body>

  <%- include('navbarprofile') %>

    <div class="container-fluid">
      <div class="row">
        <!-- Left side: Table (9/12 space) -->
        <div class="col-lg-9 mt-3">
          <table class="table">
            <thead class="custom-thead">
              <%if(cart && cart.length>0){%>
                <tr>
                  <th>Nos</th>
                  <th>Image</th>
                  <th>Product</th>
                  <th>Quantity</th>
                  <th>Price</th>
                  <th>Total</th>
                  <th>Action</th>
                </tr>
            </thead>
            <tbody>
              <!-- Add your cart items dynamically here -->

              <% cart.forEach(function(product,index) { %>
                <tr data-price="<%= product.price %>">
                  <td>
                    <%= index+1 %>
                  </td>
                  <td><img style="width: 3rem;height:1.2rem;" src="<%= product.image[0] %>" alt=""></td>
                  <td>
                    <%= product.productname %>
                  </td>



                  <td>

                    <button class="quantity-btn"
                      onclick="changeQuantity(this, 'decrease', '<%= product._id %>')">↓</button>
                    <span class="quantity" data-product-id="<%= product._id %>">
                      <%= product.quantity %>
                    </span>

                    <button class="quantity-btn"
                      onclick="changeQuantity(this, 'increase', '<%= product._id %>')">↑</button>
                    <span class="text-danger" id="error-msg-<%= product._id %>"></span>

                  </td>






                  <td>$<%= product.price%>
                  </td>

                  <td class="total-price">$<%= (product.quantity * product.price)%>
                  </td>

                  <td>
                    <a href="#" onclick="confirmRemove('<%=product._id%>')">
                      <button class="btn btn-danger">Remove</button>
                    </a>

                  </td>



                </tr>
                <% }); %>
            </tbody>
            <!--  -->
          </table>
        </div>

        <!-- Right side: Container for additional details -->
        <div class="col-lg-3 mt-5">
          <div class="container order-summary">
            <h4>Order Summary</h4>
            <br>
            <hr>
            <p><strong>Total price:<span style="color: red;" id="total-sum">$ <%= sum %></span></strong></p>

            <a href="/cart/checkoutpage"><button class="btn btn-primary">Checkout</button></a>
          </div>
        </div>
        <%}else{ %>

          <p
            style="color: #3498db; font-size: 30px; font-weight: bold; text-align: center; width: 100%;margin-left: 6rem;">
            No item in Cart</p>


          <%}%>
      </div>
    </div>



    <script>
      async function confirmRemove(productId) {
        // Use SweetAlert for confirmation
        const { value: confirmation } = await Swal.fire({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#d33',
          cancelButtonColor: '#3085d6',
          confirmButtonText: 'Yes, remove it!'
        });

        if (confirmation) {
          // Redirect to the deleteItem endpoint if the user confirms
          window.location.href = "/cart/deleteItem/" + productId;
        }
      }
    </script>
    <script>async function changeQuantity(button, action, productid) {
        console.log('Function called with action:', action, 'and productid:', productid);

        var row = button.closest('tr');
        var quantityElement = row.querySelector('.quantity');
        var totalElement = row.querySelector('.total-price');
        var currentQuantity = parseInt(quantityElement.innerText);

        if (action === 'increase') {
          currentQuantity += 1;
        } else if (action === 'decrease' && currentQuantity > 1) {
          currentQuantity -= 1;
        }

        quantityElement.innerText = currentQuantity;

        try {
          const response = await fetch(`/cart/updateQuantity/${productid}?action=${action}`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ quantity: currentQuantity }),
          });

          const data = await response.json();

          console.log('Server response:', data);

          if (data && data.error) {
            var errorElement = document.createElement('span');
            errorElement.className = 'text-danger';
            errorElement.innerText = data.error;
            var quantityCell = row.querySelector('.quantity');
            quantityCell.appendChild(errorElement);
            setTimeout(() => {
              errorElement.remove();
            }, 3000);
          } else {
            // Update the total price dynamically
            const productPrice = parseFloat(row.dataset.price);
            totalElement.innerText = `$${(currentQuantity * productPrice).toFixed(2)}`;

            // Update the total sum dynamically
            updateTotalSum();
          }

        } catch (error) {
          console.error('Error updating quantity:', error);
        }
      }

      function updateTotalSum() {
        var totalSum = 0;
        var totalElements = document.querySelectorAll('.total-price');
        totalElements.forEach(function (element) {
          totalSum += parseFloat(element.innerText.replace('$', ''));
        });
        var totalSumElement = document.querySelector('#total-sum');
        if (totalSumElement) {
          totalSumElement.innerText = `$${totalSum.toFixed(2)}`;
        }
      }
    </script>







    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"></script>
</body>

</html>