              for (let i = 1; i <= totalPages; i++) {
                paginationElement.innerHTML += `<a href="?page=${i}" class="${i === currentPage ? 'active page-link' : 'page-link'}">${i}</a>`;
              }

              if (currentPage < totalPages) {
                paginationElement.innerHTML += `<a href="?page=${currentPage + 1}" class="next-arrow" aria-label="Next"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>`;
              }
            };

            // Add an event listener to trigger search on input change
