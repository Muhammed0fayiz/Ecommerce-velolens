            const updatePagination = (totalPages, currentPage) => {
              const paginationElement = document.querySelector('.pagination');
              paginationElement.innerHTML = '';

              if (currentPage > 1) {
                paginationElement.innerHTML += `<a href="?page=${currentPage - 1}" class="prev-arrow" aria-label="Previous"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>`;
