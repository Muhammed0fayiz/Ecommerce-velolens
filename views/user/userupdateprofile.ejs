<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Your+Chosen+Font&display=swap">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/headstyle.css">


  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">



  <style>
    #nav-item {
      color: black;
      margin-left: 3vh;
    }

    a.nav-link {
      color: black;
      margin-left: 3vh;
    }

    .navbar {
      background-color: rgb(215, 223, 230);
    }

    .logo-image {
      margin-top: 1px;
      width: 3rem;
      height: 3rem;
      object-fit: cover;
      border-radius: 50%;
    }

    .company-name {
      font-family: 'Your Chosen Font', sans-serif;
      /* Replace 'Your Chosen Font' with the actual font you want to use */
      font-size: 20px;
      /* Adjust the font size according to your design */
      font-weight: bold;
      color: blue;
      /* Adjust the color according to your design */
    }
  </style>
</head>

<body>
  <!-- navbar -->
  <%- include('navbarprofile') %>
    <div class="container">
      <h4 class="text-danger">Update Profile</h4>
      <div class="row">

        <form class="col s12" method="post" action="/profile/updateprofilePost" onsubmit="return validateForm()"
          enctype="multipart/form-data">

          <div class="row">

          </div>
          <div class="row">
            <div class="input-field col s12 m12 l6">
              <input id="firstname" type="text" placeholder="user_name" name="username" value="<%=user.username%>">
              <span id="usernameError" class="text-danger"></span>
            </div>
          </div>
          <div class="row">


          </div>
          <div class="row">


          </div>
          <div class="row">


            <div class="form-group">
              <label for="image">Image:</label>
              <input type="file" accept="image/*" class="form-control" id="img" name="img" onchange="previewimg(event)">

            </div>
            <div id="preview" class="mt-3"></div>

          </div>
          <button class="waves-effect waves-light btn right" type="submit">Submit</button>
        </form>
      </div>
    </div>
    <!-- //priview image -->
    <script>
      function previewimg(event) {
        let image = URL.createObjectURL(event.target.files[0]);
        let imgdiv = document.getElementById('preview')
        let newimage = document.createElement('img')
        imgdiv.innerHTML = ""
        newimage.src = image
        newimage.width = "200"
        imgdiv.appendChild(newimage)
      }
    </script>
    <script>
      function validateForm() {
        // Reset error messages
        document.getElementById("usernameError").textContent = "";

        var username = document.getElementById("firstname").value.trim();
        if (username === "") {
          // Handle empty input
          document.getElementById("usernameError").textContent = "User name is required.";
          return false;
        } else if (username.length < 2 || username.length > 25) {
          // Handle out-of-range input
          document.getElementById("usernameError").textContent = "User name must be between 2 and 25 characters.";
          return false;
        }

        // If all conditions are satisfied, return true to submit the form
        return true;
      }
    </script>


</body>

</html>